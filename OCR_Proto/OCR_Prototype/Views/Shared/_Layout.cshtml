
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - New Page Design</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/font-awesome-4.7.0/css/font-awesome.css")
    @Styles.Render("~/Content/hover.css")

</head>
<body class="bg-light">
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">DocScan</a>

        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="#">Sign out</a>
            </li>
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <!--Left menu-->
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                                OCR <span class="sr-only">(current)</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Upload", "OCR")"><span class="oi oi-data-transfer-upload" title="icon name" aria-hidden="true"></span> Upload PDF</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("FormListing", "OCR")"><span class="oi oi-list" title="icon name" aria-hidden="true"></span> Details Listing</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!--End Left menu-->
            <!--Body-->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                @RenderBody()
            </main>
            <!--End Body-->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- The Modal -->
    <div id="modal-container" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Information</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            //initial image select
            $('#upload-file').imgAreaSelect({ x1: 120, y1: 90, x2: 280, y2: 210 });

            $('#btnUploadFile').on('click', function (e) {
                $(this).attr('data-target', '#modal-container');
                $(this).attr('data-toggle', 'modal');
                $(this).attr('data-backdrop', 'static');
                $(this).attr('data-keyboard', 'false');
                //var files = e.target.files;
                var files = $("#FileUpload").get(0).files;               
                if (files.length > 0) {
                    if (window.FormData !== undefined) {
                        var data = new FormData();
                        //for (var x = 0; x < files.length; x++) {
                        //    data.append("file" + x, files[x]);
                        //}
                        var targetfile = $("#FileUpload").get(0).files;

                        // Add the uploaded image content to the form data collection
                        if (targetfile.length > 0) {
                            data.append("UploadedImage", targetfile[0]);
                        }
                        data.append("DocID", $('select[name=DDlDoc] option:selected').val());
                        $.ajax({
                            type: "POST",
                            url: '/OCR/UploadImg',
                            contentType: false,
                            processData: false,
                            data: data,
                            success: function (result) {
                                //console.log(result);
                                $('.modal-content').html(result);
                            },
                            error: function (xhr, status, p3, p4) {
                                var err = "Error " + " " + status + " " + p3 + " " + p4;
                                if (xhr.responseText && xhr.responseText[0] == "{")
                                    err = JSON.parse(xhr.responseText).Message;
                                console.log(err);
                            }
                        });
                    } else {
                        alert("This browser doesn't support HTML5 file uploads!");
                    }
                }
            });
        });
    </script>
</body>
</html>
